#include<iostream>
#include<time.h>
#include "windows.h"
#define getret cout << "\n\n\nНажмите Enter для продолжения.."; getchar(); getchar(); return 0;

using namespace std;

int z1();
int z2();
int z3();
int z4();
int z5();
int z6();

int main() {
	setlocale(0, "");
	int a = 0;
	do {
		system("cls");
		cout << "Выберите номер задания\n(для завершения введите 0)\n\n";
		cin >> a;
		switch (a)
		{
		case 1:	z1();
			break;
		case 2:	z2();
			break;
		case 3:	z3();
			break;
		case 4:	z4();
			break;
		case 5:	z5();
			break;
		case 6:	z6();
			break;
		default:
			break;
		}
	} while (a != 0);
	system("cls");
	cout << "\n\tСпасибо за внимание! :з\n";
	getchar(); getchar();
}

int z1()
{
	int a = 0;
	do
	{
		system("cls");
		cout << "Задание номер 1\n\n";
		cout << "Введите значение угла в градусах от 0 до 360\n";
		cin >> a;
	} while (a >= 360 || a <= 0);
	system("cls");
	cout << "Задание номер 1\n\n";
	cout << "Введите значение угла в градусах от 0 до 360\n";
	cout << "\nЗначение этого угла в радианах: ";
	if (a == 180) {
		cout << " п радиан"; getret
	}
	int b = 180;
	if (a % 5 == 0 || a % 2 == 0 || a % 3 == 0) {
		if (a % 5 == 0) { b /= 5; a /= 5; }
		while (a % 3 == 0 && b % 3 == 0) { a /= 3; b /= 3; }
		while (a % 2 == 0 && b % 2 == 0) { a /= 2; b /= 2; }
		if (a != 1 && b != 1)cout << a << " п / " << b << " радиан";
		if (a == 1 && b != 1)cout << " п / " << b << " радиан";
		getret
	}
	cout << a << " п / " << "180 радиан";
	getret
}

int z2()
{
	int a = 0, b = 0;
	do
	{
		system("cls");
		cout << "Задание номер 2\n\n";
		cout << "Введите сначала числитель значения угла в радианах, а затем знаменатель\n";
		cin >> a >> b;
	} while (a == 0 || b == 0);
	system("cls");
	cout << "Задание номер 2\n\n";
	cout << "Введите сначала числитель значения угла в радианах, а затем знаменатель\n\n";
	cout << "Введенный вами угол " << a << "п / " << b << " равен " << a * 180 / b << "°";
	getret
}

int z3()
{
	int A = -1, X = -1, Y = -1;
	do
	{
		system("cls");
		cout << "Задание номер 3\n\n";
		cout << "\"Известно, что X кг конфет стоит A рублей. Определить, сколько стоит 1 кг и Y кг этих же конфет.\"\nВведите положительные значения X, A, Y\n";
		cin >> X >> A >> Y;
	} while (X < 0 || Y < 0 || A < 0);
	system("cls");
	cout << "Задание номер 3\n\n";
	cout << "\"Известно, что X кг конфет стоит A рублей. Определить, сколько стоит 1 кг и Y кг этих же конфет.\"\nВведите положительные значения X, A, Y\n\n";
	cout << "1 кг конфет стоит " << (float)A / X << " руб. " << Y << " кг конфет стоит " << ((float)A / X) * Y << " руб.";
	getret
		return 0;
}

int z4()
{
	int v1, v2, s, t;
	do
	{
		system("cls");
		cout << "Задание номер 4\n\n";
		cout << "\"Скорость первого автомобиля V1 км/ч, второго — V2 км/ч, расстояние между ними S км. Определить расстояние между ними через T часов, если автомобили удаляются друг от друга.\"\n\nВведите положительные значения V1, V2, S и T\n";
		cin >> v1 >> v2 >> s >> t;
	} while (v1 < 0 || v2 < 0 || s < 0 || t < 0);
	system("cls");
	cout << "Задание номер 4\n\n";
	cout << "\"Скорость первого автомобиля V1 км/ч, второго — V2 км/ч, расстояние между ними S км. Определить расстояние между ними через T часов, если автомобили удаляются друг от друга.\"\n\n";
	printf("Скорость первого автомобиля %d км/ч, второго — %d км/ч, расстояние между ними %d км.\nРасстояние между автомобилями через %d ч, если они удаляются друг от друга составляет %d км", v1, v2, s, t, v1 * t + v2 * t + s);
	getret
		return 0;
}

int z5()
{
	int a = 0, b;
	do
	{
		system("cls");
		cout << "Задание номер 5\n\n";
		cout << "\"Решение линейного уравнения A·x + B = 0, заданное коэффициентами A и B\"\n\nВведите A не равное нулю и B\n";
		cin >> a >> b;
	} while (a == 0);
	system("cls");
	cout << "Задание номер 5\n\n";
	cout << "\"Решение линейного уравнения A·x + B = 0, заданное коэффициентами A и B\"\n\n";
	cout << "Решением линейного уравнения " << a << "·x + " << b << " = 0 является x = " << (float)(-b) / a;
	getret
		return 0;
}

int z6()
{
	srand(time(0));
	int a1 = 0, b1 = 0, c1 = 0, a2 = 0, b2 = 0, c2 = 0, r = 0;
	float x = 0, y = 0;
	do
	{
		system("cls");
		cout << "Задание номер 6\n\n";
		cout << "\"Решение системы линейных уравнений \n A1·x + B1·y = C1\n A2·x + B2·y = C2\nзаданное соответственно коэффициентами A1, B1, C1, A2, B2 и C2\"\n\nЗадать коэффициенты случайно  0\nВвести коэффициенты вручную  1\n\n";
		cin >> r;
		if (r == 0) {
			do {
				a1 = 1 + rand() % 26;
				b1 = 1 + rand() % 26;
				c1 = 1 + rand() % 26;
				a2 = 1 + rand() % 26;
				b2 = 1 + rand() % 26;
				c2 = 1 + rand() % 26;
			} while (b2 == 0 || (a1 * b2 - a2 * b1) == 0);
		}
		else if (r == 1) {
			cout << endl;
			cin >> a1 >> b1 >> c1 >> a2 >> b2 >> c2;
			if (b2 == 0 || (a1 * b2 - a2 * b1) == 0) {
				cout << "\nОшибка, либо b2 = 0, либо a1 * b2 - a2 * b1 = 0";
				cout << "\nНажмите Enter для повторного ввода"; getchar(); getchar();
				continue;
			}
		}
		else continue;
	} while (b2 == 0 || (a1 * b2 - a2 * b1) == 0);
	system("cls");
	cout << "Задание номер 6\n\n";
	x = (float)(c1 * b2 - c2 * b1) / (a1 * b2 - a2 * b1);
	y = (float)(c2 - a2 * x) / b2;
	printf("Решением системы линейных уравнений \n %d·x + %d·y = %d\n %d·x + %d·y = %d\nзаданным соответственно коэффициентами \nA1 = %d  B1 = %d  C1 = %d\nA2 = %d  B2 = %d  C2 = %d\nявляется ", a1, b1, c1, a2, b2, c2, a1, b1, c1, a2, b2, c2);
	cout << "\nх = " << x << " и у = " << y;
	getret
		return 0;
}
