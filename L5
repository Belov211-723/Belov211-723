#include<stdio.h>
#include<math.h>
void z1() {
	float a, b, c;
	printf("_________________________________________________________________\n			Задание 1\n");
	printf("Введите координаты первой точки x1=");
	scanf_s("%f", &a);
	printf("Введите координаты первой точки y1=");
	scanf_s("%f", &b);
	printf("Введите координаты второй точки x2=");
	scanf_s("%f", &c);
	a -= c;
	printf("Введите координаты второй точки y2=");
	scanf_s("%f", &c);
	b -= c;
	c = sqrtf(pow(a, 2) + powf(b, 2));
	printf("\nРасстояние между заданными точками равно %.2f\n", c );
}
void z2() {
	float a, b, c;
	printf("_________________________________________________________________\n			Задание 2\n");
	printf("Введите значение точки A ");
	scanf_s("%f", &a);
	printf("Введите значение точки B ");
	scanf_s("%f", &b);
	printf("Введите значение точки C ");
	scanf_s("%f", &c);
	a = fabs(a - c);
	b = fabs(b - c);
	c = a + b;
	printf("\nДлина отрезка AC %.2f\nДлина отрезка BC %.2f\nСумма длин отрезков равна %.2f\n", a, b, c);
}
void z3() {
	float a, b, c;
	printf("_________________________________________________________________\n			Задание 3\n");
	printf("Введите значение точки A ");
	scanf_s("%f", &a);
	do {
		printf("Введите значение точки B ");
		scanf_s("%f", &b);
	} while (b == a);
	do {
		printf("Введите значение точки C находящейся между A и B ");
		scanf_s("%f", &c);
	} while ((((b < c) && (c < a)) || ((a < c) && (c < b))) == 0);
	a = fabs(a - c);
	b = fabs(b - c);
	c = a * b;
	printf("\nДлина отрезка AC %.2f\nДлина отрезка BC %.2f\nПроизведение длин отрезков равно %.2f\n", a, b, c);
}
void z4() {
	float a, b, c;
	printf("_________________________________________________________________\n			Задание 4\n");
	printf("Введите координаты первой точки x1=");
	scanf_s("%f", &a);
	printf("Введите координаты первой точки y1=");
	scanf_s("%f", &b);
	printf("Введите координаты второй точки x2=");
	scanf_s("%f", &c);
	a = fabs (a-c);
	printf("Введите координаты второй точки y2=");
	scanf_s("%f", &c);
	b = fabs(b - c);
	printf("\nПериметр прямоугольника с заданными вершинами равен %.2f\nПлощадь прямоугольника с заданными вершинами равна %.2f\n", 2*(a+b), a*b);
}
void z5() {
	float xa, xb, xc, ya, yb, yc, ab, bc, ca, P, S;
	printf("_________________________________________________________________\n			Задание 5\n");
	printf("Введите координаты первой точки x=");
	scanf_s("%f", &xa);
	printf("Введите координаты первой точки y=");
	scanf_s("%f", &ya);
	printf("Введите координаты второй точки x=");
	scanf_s("%f", &xb);
	printf("Введите координаты второй точки y=");
	scanf_s("%f", &yb);
	printf("Введите координаты третьей точки x=");
	scanf_s("%f", &xc);
	printf("Введите координаты третьей точки y=");
	scanf_s("%f", &yc);
	ab = sqrt(pow((xa - xb), 2) + pow((ya - yb), 2));
	bc = sqrt(pow((xb - xc), 2) + pow((yb - yc), 2));
	ca = sqrt(pow((xc - xa), 2) + pow((yc - ya), 2));
	//printf("\nДлина ab %.2f\nДлина bc %.2f\nДлина ca %.2f\n", ab, bc, ca);
	P = ab + bc + ca;
	S = sqrt( (P / 2) * ( ( (P / 2) - ab)*( (P / 2) - bc)*( (P / 2) - ca)) );
	printf("\nПериметр треугольника с заданными вершинами равен %.6f\nПлощадь треугольника с заданными вершинами равна %.6f\n", P, S);

}
void main() {
	setlocale(0, "");
	int a = 1;
	while (a != 0) {
		printf("_________________________________________________________________\n\nВыберите номер задания\n(для завершения введите 0)\n");
		scanf_s("%d", &a);
		switch (a) {
		case 1: z1(); break;
		case 2: z2(); break;
		case 3: z3(); break;
		case 4: z4(); break;
		case 5: z5(); break;
		case 0: break;
		default: printf("такого еще нет\n"); break;
		}
	}
	system("pause");
}
